@model IEnumerable<InAndOut.Models.ExpenseCategory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses Category List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name of Category</th>     
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var expenseCategory in Model)
                {
                    <tr>
                        <td width="65%">@expenseCategory.Name</td>
                        
                        <td width="30%">
                            <a asp-controller="ExpenseCategory" asp-action="Update" asp-route-Id="@expenseCategory.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@expenseCategory.Id" class="btn btn-danger mx-1">Delete</a>
                        </td>

                    </tr>

                }
            </tbody>
            <thead>
                <tr>
                    <th>Count Expenses : @Model.Count()</th>
                    <th></th>


                </tr>
            </thead>
        </table>
        <div>

        </div>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>