@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name of Expenses</th>
            <th>Amount Expenses</th>
            <th>Changes</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="35%">@item.NameExpense</td>
            <td width="35%">@item.AmountExpense</td>
            <td width="30%">
                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
            </td>

        </tr>

        }
    </tbody>
    <thead>
        <tr>           
                    <th>Count Expenses : @Model.Count()</th>
                    <th>Total Amount : @Model.Sum(i => i.AmountExpense)</th>
                    <th></th>
        </tr>
    </thead>
</table>
        <div>
            
        </div>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>